<!-- Masthead -->
<header class="masthead text-white text-center">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-xl-9 mx-auto">
        <h1 class="mb-5">
          <%= t('headline') %>
        </h1>
      </div>
      <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
        <form>
          <div class="form-row">
            <% if current_user %>
              <div class="col-12 col-md-8 mb-2 mb-md-0">
                <input type="email" class="form-control form-control-lg" placeholder="Search for verses or categories...">
              </div>
              <div class="col-12 col-md-4">
                <button href="/auth/google_oauth2" type="submit" class="btn btn-block btn-lg btn-primary">Search</button>
              </div>
            <% else %>
              <a href="<%= ENV.fetch('GOOGLE_OAUTH2_REDIRECT_URL') %>" class="btn btn-block btn-lg btn-primary">Sign in with Google</a>
            <% end %>
          </div>
        </form>
      </div>
    </div>
  </div>
</header>

<!-- Verses -->
<section class="bg-light">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-6 offset-lg-3 py-4">
        <div class="font-serif lines-md">
          <% if @verses.length %>

            <%= render 'toolbar' %>

            <h2>
              Proverbs
              <% if @display_view == 'spaced' %>
                <span class="bold t-lg pr-1"><%= @verses.first.chapter %></span>
              <% end %>
            </h2>

            <% @verses.each do |v| %>
              <%= render @display_partial, verse: v %>
            <% end %>

            <div class="py-2">
              <div class="pull-right">
                <%= render 'next_previous_links' %>
              </div>
            </div>

          <% else %>
            <div class="text-center">
              <h3>No verses to display right now.</h3>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>


  </body>

</html>
